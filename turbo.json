{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "PORT",
    "JWT_SECRET",
    "CORS_ORIGIN",
    "JWT_EXPIRES_IN"
  ],
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": true,
      "outputs": ["generated/**", "src/generated/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
