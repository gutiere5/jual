generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  PURCHASE
  SALE
  RETURN
  WASTE
  ADJUSTMENT
}

enum WasteReason {
  EXPIRED
  DAMAGED
  THEFT
  MISTAKE
  OTHER
}

enum UnitOfMeasure {
  EA
  LB
  OZ
  KG
  G
  L
  ML
}

enum Category {
  PRODUCE
  DAIRY
  BEVERAGES
  MEAT
  FRUIT
  SEAFOOD
  BAKERY
  DRY_GOODS
  CANNED_GOODS
  FROZEN
  SPICES
  HOUSEHOLD
  PREPARED
  BEEF
  POULTRY
  PORK
  RESTAURANT
  OTHER
}

enum MeatChoice {
  CARNE_ASADA
  CHORIZO
  TRIPA
  LENGUA
  PASTOR
  CHICHARRONES
  ASADA_DE_POLLO
}

model user {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  username   String   @unique
  password   String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model item {
  id                  Int            @id @default(autoincrement())
  clover_id           String?        @unique @db.VarChar(50)
  sku                 String?        @unique @db.VarChar(100)
  name                String?        @db.VarChar(255)
  description         String?        @db.VarChar(255)
  ingredients         String?        @db.VarChar(255)
  uom                 UnitOfMeasure?
  price               Decimal?       @db.Money
  vendor_id           Int?
  low_stock_threshold Int?           @default(10)
  image_url           String?        @db.VarChar(255)
  meat_choices        MeatChoice[]
  category            Category
  vendor              vendor?        @relation(fields: [vendor_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  stock_batch         stock_batch[]
  transaction         transaction[]
  waste               waste[]

  @@index([clover_id], map: "item_index_clover_id")
}

model stock_batch {
  id                 Int           @id @default(autoincrement())
  item_id            Int?
  quantity_received  Decimal       @db.Decimal(12, 3)
  quantity_remaining Decimal       @db.Decimal(12, 3)
  expiration_date    DateTime?     @db.Date
  received_at        DateTime?     @default(now()) @db.Timestamp(6)
  cost_at_purchase   Decimal?      @db.Decimal(12, 2)
  item               item?         @relation(fields: [item_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  transaction        transaction[]
  waste              waste[]
}

model transaction {
  id               Int             @id @default(autoincrement())
  item_id          Int?
  batch_id         Int?
  clover_order_id  String?         @db.VarChar(100)
  type             TransactionType
  quantity         Decimal?        @db.Decimal(12, 3)
  transaction_date DateTime?       @default(now()) @db.Timestamp(6)
  stock_batch      stock_batch?    @relation(fields: [batch_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  item             item?           @relation(fields: [item_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([clover_order_id], map: "transaction_index_clover_order_id")
}

model vendor {
  id        Int     @id @default(autoincrement())
  clover_id String? @unique @db.VarChar(50)
  name      String? @db.VarChar(255)
  item      item[]

  @@index([clover_id], map: "vendor_index_clover_id")
}

model waste {
  id          Int          @id @default(autoincrement())
  item_id     Int?
  batch_id    Int?
  quantity    Decimal      @db.Decimal(12, 3)
  reason      WasteReason
  created_at  DateTime     @default(now()) @db.Timestamp(6)
  stock_batch stock_batch? @relation(fields: [batch_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  item        item?        @relation(fields: [item_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
